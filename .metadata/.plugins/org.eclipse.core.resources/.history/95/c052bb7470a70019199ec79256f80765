package day2;

import java.util.Arrays;

//  ( 큰수 * 작은수 ) > ( 작은수 * 큰수 ) 퍼포먼스 더 좋음
public class CountingSort {
	static int[] data = new int[30];
	static int[] count = new int[6];
	static int[] sortedData = new int[30];
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		setRandomData();
		countingData();
		System.out.println(Arrays.toString(sortedData));

	}
	
	public static void setRandomData() {
		for(int i = 0; i<data.length; i++) {
			data[i] = (int)(Math.random()*5)+1;
		}
	}
	
	public static void countingData() {
		for(int i =0; i<data.length; i++) {
			count[data[i]]++;
		}
		for(int i=1; i<100; i++) {
			count[i] += count[i-1];
		}
		int index;
		for(int i=data.length-1; i>=0; i--) {
			index = count[data[i]]--;
			sortedData[index]=data[i];
		}
	}
	
	

}
